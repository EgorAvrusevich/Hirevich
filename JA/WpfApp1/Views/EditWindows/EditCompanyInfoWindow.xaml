<Window x:Class="JA.Views.EditWindows.EditCompanyInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:JA.Classes"
        mc:Ignorable="d"
        Title="Редактирование информации компании" 
        Height="450" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <converters:GreaterThanZeroConverter x:Key="GreaterThanZeroConverter"/>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Текущий логотип -->
        <TextBlock Grid.Row="0" Text="Текущий логотип:" Margin="0,0,0,10"/>
        <Border Grid.Row="1" 
                Width="150" 
                Height="150" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1"
                HorizontalAlignment="Left">
            <Image Source="{Binding CurrentLogo}"
                   Stretch="Uniform"/>
        </Border>

        <!-- Новый логотип -->
        <TextBlock Grid.Row="2" Text="Новый логотип:" Margin="0,20,0,10"/>
        <StackPanel Grid.Row="3" Orientation="Vertical">
            <Button Content="Выбрать изображение..." 
                    Width="150"
                    HorizontalAlignment="Left"
                    Click="SelectImage_Click"
                    Margin="0,0,0,10"/>

            <Border Width="150" 
                    Height="150" 
                    BorderBrush="#CCCCCC" 
                    BorderThickness="1"
                    HorizontalAlignment="Left">
                <Image Source="{Binding NewLogo}"
                       Stretch="Uniform"/>
            </Border>
        </StackPanel>

        <!-- Название компании -->
        <StackPanel Grid.Row="4" Margin="0,20,0,0">
            <TextBlock Text="Название компании:" Margin="0,0,0,5"/>
            <TextBox Text="{Binding CompanyName, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Отмена" Width="80" Margin="0,0,10,0" Click="CancelButton_Click"/>
            <Button Content="Сохранить" Width="80" Click="SaveButton_Click"
                    IsEnabled="{Binding CompanyName.Length, Converter={StaticResource GreaterThanZeroConverter}}"/>
        </StackPanel>
    </Grid>
</Window>