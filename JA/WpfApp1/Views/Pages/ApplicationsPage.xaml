<Page x:Class="JA.Views.Pages.ApplicationsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JA.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ApplicationsPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Height="40" Margin="20,20,20,20" Background="White" CornerRadius="4">
            <Border CornerRadius="4">
                <Grid>
                    <Border CornerRadius="4" Padding="1" Margin="10,0, 200,0" Background="#F8F8F8" Height="25">
                        <Grid>
                            <TextBox BorderThickness="0" Background="#F8F8F8" VerticalAlignment="Center" Margin="25,0,0,0"></TextBox>
                            <Image Source="/Images/lupa.png" Height="10" Width="10" HorizontalAlignment="Left" Margin="5"></Image>
                        </Grid>
                    </Border>
                    <Border Margin="0,0,10,0" Height="25"  Width="180" HorizontalAlignment="Right" BorderThickness="0.3" BorderBrush="#849A9C" CornerRadius="4">
                        <Label Content="Фильтр" FontSize="10" HorizontalAlignment="Center" Foreground="#FF849A9C"  />
                    </Border>
                </Grid>
            </Border>
        </Border>
        <Grid Grid.Row="2" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
        </Grid>
        <Rectangle HorizontalAlignment="Left" Height="100" Margin="813,8,0,0" Grid.RowSpan="2" Grid.Row="1" Stroke="Black" VerticalAlignment="Top" Width="100"/>
    </Grid>
</Page>
