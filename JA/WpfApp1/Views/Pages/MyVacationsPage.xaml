<Page x:Class="JA.Views.Pages.MyVacationsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JA.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MyVacationsPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Label Margin="20, 10" FontSize="26"> Мои вакансии</Label>
            <Button Margin="20,15" Width="170">+ Добавить вакансию</Button>
        </StackPanel>

            <Grid Grid.Row="1" Margin="20,0,20,20">
            <ListBox Background="#F8F8F8" BorderThickness="0" x:Name="ApplicationsList"
             ItemsSource="{Binding applications}" ScrollViewer.HorizontalScrollBarVisibility="Disabled"
             HorizontalContentAlignment="Stretch" SelectionChanged="ApplicationsList_SelectionChanged">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border CornerRadius="4" Margin="0,10,0,10" HorizontalAlignment="Stretch" Background="White">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Строка с названиями -->
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0" Content="{Binding application.Vacation_Name}"/>
                                    <Image Source="{Binding Company_Logo}" HorizontalAlignment="Right" MaxWidth="100" MaxHeight="100"></Image>
                                </Grid>

                                <!-- Строка с зарплатой -->
                                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5,0,0">
                                    <Image Width="15" Height="15" Source="/Images/Job wage.png"/>
                                    <Label Content="{Binding application.Wage}" Margin="5,0,0,0"/>
                                </StackPanel>

                                <!-- Описание с обрезкой -->
                                <Border Grid.Row="2" Margin="0,10,0,0">
                                    <TextBlock 
                                Text="{Binding application.Description}"
                                FontSize="14"
                                TextWrapping="Wrap" 
                                TextTrimming="CharacterEllipsis"
                                MaxHeight="45"
                                MaxWidth="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Border}}"
                                HorizontalAlignment="Stretch"/>
                                </Border>
                                <StackPanel Orientation="Horizontal" Grid.Row="3">
                                    <Ellipse Width="20" Height="20">
                                        <Ellipse.Fill>
                                            <ImageBrush ImageSource="{Binding application.Country, Converter={StaticResource CountryToFlagConverter}}"></ImageBrush>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                    <Label Content="{Binding application.Company_name}" />
                                    <Label Content="{Binding application.Experience}" />
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Grid>
</Page>
