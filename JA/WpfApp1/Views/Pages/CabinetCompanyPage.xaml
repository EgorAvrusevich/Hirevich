<Page x:Class="JA.Views.Pages.CabinetCompanyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JA.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CabinetCompanyPage">

    <Grid Margin="20" Background="White">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="120"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!-- Шапка с логотипом и названием компании -->
            <Border CornerRadius="4" Background="#F8F8F8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="30"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <Border Width="80" Height="80" CornerRadius="4" Margin="20">
                            <Image Source="{Binding Logo}" 
                                   Stretch="Uniform"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <Label Content="{Binding Name}" 
                                   FontSize="28" 
                                   FontWeight="Bold"
                                   Margin="10,0,0,0"/>
                            <TextBlock Text="{Binding Email}" 
                                       FontSize="14"
                                       Margin="10,5,0,0"/>
                        </StackPanel>
                    </StackPanel>
                    <Image Grid.Column="1" 
                           HorizontalAlignment="Right" 
                           Source="/Images/Edit.png" 
                           Width="30"
                           />
                </Grid>
            </Border>

            <!-- Блок с основной информацией -->
            <Border Grid.Row="1" CornerRadius="4" Margin="0,10,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="30"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <Label FontSize="14" FontWeight="Bold">Контактная информация:</Label>
                        <StackPanel Orientation="Horizontal" Margin="10,5,0,0">
                            <Image Source="/Images/email_icon.png" Width="16" Height="16"/>
                            <TextBlock Text="{Binding Email}" 
                                       FontSize="14"
                                       Margin="5,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                    <Image Grid.Column="1" 
                           Source="/Images/Edit.png" 
                           Width="30"
                           HorizontalAlignment="Right"
                           />
                </Grid>
            </Border>

            <!-- Блок с описанием деятельности -->
            <Border Grid.Row="2" CornerRadius="4" Margin="0,10,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="30"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <Label FontSize="14" FontWeight="Bold">Основная деятельность:</Label>
                        <TextBlock Text="{Binding Discription}" 
                                   FontSize="14"
                                   Margin="10,5,0,0"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                    <Image Grid.Column="1" 
                           Source="/Images/Edit.png" 
                           Width="30"
                           HorizontalAlignment="Right"
                           />
                </Grid>
            </Border>

            <!-- Подробное описание компании -->
            <Border Grid.Row="3" CornerRadius="4" Margin="0,10,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="30"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <Label FontSize="14" FontWeight="Bold">Подробное описание компании:</Label>
                        <ScrollViewer MaxHeight="200" Margin="10,5,0,0">
                            <TextBlock Text="{Binding Discription}" 
                                       FontSize="14"
                                       TextWrapping="Wrap"/>
                        </ScrollViewer>
                    </StackPanel>
                    <Image Grid.Column="1" 
                           Source="/Images/Edit.png" 
                           Width="30"
                           HorizontalAlignment="Right"
                           />
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
