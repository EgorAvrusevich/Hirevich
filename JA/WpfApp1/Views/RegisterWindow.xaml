<Window x:Class="JA.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JA"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="555" Width="500" MaxWidth="500" MinWidth="500" MinHeight="555">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Регистрация" VerticalAlignment="Center" Margin="40,0,0,0" FontSize="35"/>
        <Border Grid.Row="1" Margin="30" CornerRadius="4">
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" BorderBrush="#849A9C" Background="#F8F8F8" Foreground="#849A9C" Name="button_sercher" Click="button_sercher_Click" >Соискатель</Button>
                <Button Grid.Column="1" BorderBrush="#C2CDCE" Background="#FFFFFF" Foreground="#C2CDCE" Name="button_company" Click="button_company_Click">Компания</Button>
            </Grid>
        </Border>
        <Label Grid.Row="2" Content="Логин" FontSize="16" Margin="40,0,0,0"/>
        <Border Name="border_login" Grid.Row="2" CornerRadius="4" HorizontalAlignment="Center" MinWidth="420" Background="#F8F8F8" MaxHeight="48" MinHeight="48">
            <TextBox x:Name="loginTextBox" TextWrapping="Wrap" Text="" Background="#F8F8F8" VerticalAlignment="Center" BorderThickness="0" Margin="10, 0" FontSize="16"/>
        </Border>
        <Label Grid.Row="3" Content="Пароль" FontSize="16" Margin="40,0,0,0"/>
        <Border Name="border_password" Grid.Row="3" CornerRadius="4" HorizontalAlignment="Center" MinWidth="420" Background="#F8F8F8" MaxHeight="48" MinHeight="48">
            <PasswordBox x:Name="passwordTextBox" Background="#F8F8F8" VerticalAlignment="Center" BorderThickness="0" Margin="10, 0" FontSize="16" />
        </Border>
        <Border Grid.Row="4" CornerRadius="4" HorizontalAlignment="Center" MinWidth="420" Background="#F8F8F8" MaxHeight="48" MinHeight="48"
                VerticalAlignment="Top">
            <Button  BorderThickness="0" Content="Зарегистрироваться" FontSize="16" Click="Button_Click" />
        </Border>
        <Button BorderThickness="0" Grid.Row="4" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,20" Background="White" FontSize="15" Click="Button_Click_1">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Content" Value="У меня есть аккаунт" />
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="White"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>
