<Window x:Class="JA.Views.MainWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JA" xmlns:viewmodels="clr-namespace:JA.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
        mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainWindow"
      MinWidth = "750px">

    <Grid Background="#F8F8F8">
        <Grid.RowDefinitions>
            <RowDefinition Height="80" x:Name="nav" />
            <RowDefinition Height="80" />
            <RowDefinition Height="121*" />
            <RowDefinition Height="16*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" CornerRadius="4" >
                <Image Source="/Images/LightLogo-removebg-preview.png" Height="80" Width="80" Stretch="Uniform"/>
            </Border>
            <Border Grid.Column="1" CornerRadius="4" Margin="8, 28" >
                <Label  Content="Вакансии" VerticalAlignment="Center" HorizontalAlignment="Center" />
            </Border>
            <Border Grid.Column="2" CornerRadius="4" Margin="8, 28" >
                <Label Grid.Column="1" Content="Резюме" VerticalAlignment="Center" HorizontalAlignment="Center" />
            </Border>
            <Border x:Name="Guest" Grid.Column="8" CornerRadius="4" Margin="8, 28" Background="#F8F8F8" MouseDown="Login_Click" Visibility="Visible">
                <Label Content="Войти" FontSize="10" HorizontalAlignment="Center" Height="24" VerticalAlignment="Top" />
            </Border>
            <StackPanel Grid.Row="8" x:Name="LoggedPanel" Orientation="Horizontal" Visibility="{Binding IsLoggedIn}">
                <TextBlock Text="{Binding _currentUser.FirstName}" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"
                               FontSize="14"/>
                <Ellipse Width="40" Height="40">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="{Binding _currentUser.ProfileImage}"/>
                    </Ellipse.Fill>
                </Ellipse>
            </StackPanel>
        </Grid>
        <Border Grid.Row="1" Height="40" Margin="20,20,20,20" Background="White" CornerRadius="4">
            <Border CornerRadius="4">
                <Grid>
                    <Border CornerRadius="4" Padding="1" Margin="10,0, 200,0" Background="#F8F8F8" Height="25">
                        <Grid>
                            <TextBox BorderThickness="0" Background="#F8F8F8" VerticalAlignment="Center" Margin="25,0,0,0"></TextBox>
                            <Image Source="/Images/lupa.png" Height="10" Width="10" HorizontalAlignment="Left" Margin="5"></Image>
                        </Grid>
                    </Border>
                    <Border Margin="0,0,10,0" Height="25"  Width="180" HorizontalAlignment="Right" BorderThickness="0.3" BorderBrush="#849A9C" CornerRadius="4">
                        <Label Content="Фильтр" FontSize="10" HorizontalAlignment="Center" Foreground="#FF849A9C"  />
                    </Border>
                </Grid>
            </Border>
        </Border>
        <Grid Grid.Row="2" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
        </Grid>
        <Rectangle HorizontalAlignment="Left" Height="100" Margin="813,8,0,0" Grid.RowSpan="2" Grid.Row="1" Stroke="Black" VerticalAlignment="Top" Width="100"/>
    </Grid>
</Window>
