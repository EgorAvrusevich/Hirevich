<Window x:Class="JA.Views.MainWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JA" xmlns:viewmodels="clr-namespace:JA.ViewModels"
        mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainWindow"
      MinWidth = "750px">

    <Grid Background="#F8F8F8">
        <Grid.RowDefinitions>
            <RowDefinition Height="80" x:Name="nav" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" CornerRadius="4" >
                <Image Source="/Images/LightLogo-removebg-preview.png" Height="80" Width="80" Stretch="Uniform"/>
            </Border>
            <Border Grid.Column="1" CornerRadius="4" Margin="8, 28" >
                <Label  Content="Вакансии" VerticalAlignment="Center" HorizontalAlignment="Center" />
            </Border>
            <Border Grid.Column="2" CornerRadius="4" Margin="8, 28" >
                <Label Grid.Column="1" Content="Резюме" VerticalAlignment="Center" HorizontalAlignment="Center" />
            </Border>
            <StackPanel Grid.Column="8" x:Name="LoggedPanel" Orientation="Horizontal">
                <TextBlock Text="{Binding _currentUser.FirstName}" 
                               VerticalAlignment="Center"
                               Margin="-30,0,10,0"
                               FontSize="14"/>
                <Ellipse Width="40" Height="40">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="{Binding _currentUser.ProfileImage}"/>
                    </Ellipse.Fill>
                </Ellipse>
            </StackPanel>
        </Grid>
        <Frame Grid.Row="1" x:Name="MainPanel"></Frame>
    </Grid>
</Window>
