<Application x:Class="JA.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:JA" xmlns:local1="clr-namespace:JA.Classes"
             StartupUri="Views/LoginWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <local1:CountryToFlagConverter x:Key="CountryToFlagConverter"/>
            <Style TargetType="Button">
                <Setter Property="Background" Value="#ffffff"/>
                <Setter Property="BorderBrush" Value="#FF4A96"/>
                <Setter Property="Foreground" Value="#FFFF4A96"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#FF4A96"/>
                        <Setter Property="Foreground" Value="#FFFFFF"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
